{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "removeComments": true,
    "allowJs": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts", "src/index.ts"]
}
